          <iframe
            height="315"
            src="https://www.youtube.com/embed/pkdgVYehiTE"
            title="YouTube video player"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
          ></iframe>
        </div>
        <form action="/courses" method="POST" class="lesson">
          <% if(!user.lesson1) {%>
          <h4><b>Current Status:</b> Incomplete</h4>
          <% } else { %>
          <h4><b>Current Status:</b> <%=user.lesson1%></h4>
          <% } %>
          <label for="lesson1"><b>Update Status</b></label>
          <select name="lesson1" id="lesson1">
            <option value="Completed">Completed</option>
            <option value="Incomplete">Incomplete</option>
          </select>
          <button class="bttn">Update</button>
        </form>
